<div class="container mt-5">
  <h1 class="mb-4">Add a new task!</h1>

  <div class="card p-4">
    <%= simple_form_for @task do |f| %>
      <%= f.input :title %>
      <%= f.input :details %>
      <%= f.submit class: 'btn btn-primary me-2' %>
      <%= link_to '< Back to all Tasks', tasks_path, class: 'btn btn-light' %>
    <% end %>
  </div>
</div>
